<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/full_expense_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/forgroundColor"
        android:padding="5dp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/transaction_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/food_24"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:background="@drawable/round_logo"
        android:contentDescription="Category Icon"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transaction_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:text="Groceries"/>

        <TextView
            android:id="@+id/transaction_desc"
            android:layout_width="match_parent"
            android:textColor="@color/grayText"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Bought groceries at Walmart"/>

    </LinearLayout>

    <TextView
        android:id="@+id/transaction_time"
        android:layout_width="wrap_content"
        android:gravity="end"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/grayText"
        android:layout_gravity="center"
        android:text="10:00 AM"/>


</LinearLayout>
</androidx.cardview.widget.CardView>